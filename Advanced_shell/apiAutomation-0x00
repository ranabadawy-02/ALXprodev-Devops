#!/bin/bash

# Task 0 — API Request Automation
# Fetch Pikachu data from the Pokémon API and save response to data.json
# On failure, log the error into errors.txt

API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the API request using curl
response=$(curl -s -w "%{http_code}" "$API_URL" -o "$OUTPUT_FILE")

# Extract HTTP code
http_code="$response"

# Check status
if [ "$http_code" -ne 200 ]; then
    echo "Error: Failed to fetch data from API. HTTP Status: $http_code" >> "$ERROR_FILE"
    exit 1
fi

exit 0
