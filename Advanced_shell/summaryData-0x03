#!/bin/bash

# Task 3 — Summarize Pokémon Data

INPUT_DIR="pokemon_data"
OUTPUT_FILE="pokemon_report.csv"

# Header for CSV
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_FILE"

# Loop through each JSON file
for file in "$INPUT_DIR"/*.json; do
    # Extract fields using jq
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
    height=$(jq -r '.height' "$file")
    weight=$(jq -r '.weight' "$file")

    # Convert units using awk
    height_m=$(awk -v h="$height" 'BEGIN { printf "%.1f", h/10 }')
    weight_kg=$(awk -v w="$weight" 'BEGIN { printf "%.1f", w/10 }')

    # Append to CSV
    echo "$name,$height_m,$weight_kg" >> "$OUTPUT_FILE"
done

echo "CSV Report generated at: $OUTPUT_FILE"
echo ""

# Display CSV content (matching sample output format)
cat "$OUTPUT_FILE"
echo ""

# Calculate Averages with awk
awk -F',' 'NR>1 { h+=$2; w+=$3; count++ }
END {
    if (count > 0) {
        printf "\nAverage Height: %.2f m\n", h/count
        printf "Average Weight: %.2f kg\n", w/count
    }
}' "$OUTPUT_FILE"
